<div class="container">
	<div class="row">
		<div class="span11 profile-container">
			<h1 id='form-header'><%= @id.capitalize %>'s Profile</h1>
			<hr>
		  <div class="span5">
		    <h4>Repos</h4>
		    <div data-hull-widget='repos' data-hull-login='<%= @id %>'></div>
		    <!-- If you're a current user and your GitHub login name is equal to the Hull id, then you will see the delete button -->
		    	<% if @current_user && @current_user.login == @id %>
			    	<p>
							<a href="#" class="btn btn-small delete" id="delete-account" onclick="Hull.logout().then(function () {window.location = '/'});destroyUser(<%=@current_user.id%>)">Delete my account</a>
			  		</p>
		  		<% end %>
		  </div>
		  <div class="span5">
		    <h4>Wall</h4>
		    <div data-hull-widget='comments@hull' data-hull-uid='user/<%= @id %>'></div>
		  </div>
		</div>
	</div>
</div>


