<div class="container matches">
  <div class="span2"></div>

  <div class="span8 right-column">
    <h1 id='form-header'>Matches</h1>
    <hr>
      <h3>
        <!-- If user CANNOT remote pair. -->
        <% if @current_user.remotable == false %>
          <% if @results.count >= 1 %>
            <%= render partial: "manyresults" %>
          <% elsif @results.count == 0 %>
              <%= render partial: "no_local_results" %>
          <% end %>

        <!-- If user CAN remote pair. -->
        <% else %>
          <% if @results.count >= 1 && @remotable_results.count >= 1 %>
            <%= render partial: "both_results_local" %>

          <!-- If no local results. -->
          <% elsif @results.count == 0 && @remotable_results.count >= 1 %>
            <%= render partial: "only_remotable_results" %>

          <!-- If local results but no remote (@current_user 'can' do remote) -->
          <% elsif @results.count >= 1 && @remotable_results.count == 0 %>
            <%= render partial: "manyresults" %>

          <!-- If no local or remote results. -->
          <% elsif @results.count == 0 && @remotable_results.count == 0 %>
            <%= render partial: "no_results" %>
          <% end %>
        <% end %>
      </h3>
  </div>
  <div class="span2"></div>
</div>